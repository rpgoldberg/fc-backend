{
  "name": "fc-backend",
  "version": "3.0.0",
  "description": "Backend API for figure collection management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "lint": "echo 'No linter configured'",
    "test": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js --testPathIgnorePatterns='cross-service|inter-service|performance' --passWithNoTests --verbose --bail=false --runInBand",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js tests/unit tests/controllers tests/models tests/middleware --passWithNoTests --verbose --runInBand",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js tests/integration --testPathIgnorePatterns='cross-service' --passWithNoTests --verbose --runInBand",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules node node_modules/jest/bin/jest.js tests/integration/cross-service tests/integration/inter-service --passWithNoTests --verbose --runInBand",
    "test:performance": "NODE_OPTIONS=--experimental-vm-modules node node_modules/jest/bin/jest.js tests/performance --passWithNoTests --verbose --runInBand",
    "test:all": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js --passWithNoTests --verbose --bail=false --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js --coverage --testPathIgnorePatterns='cross-service|inter-service|performance'",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules TEST_MODE=memory node node_modules/jest/bin/jest.js --ci --coverage --testPathIgnorePatterns='cross-service|inter-service|performance'"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-extended": "^6.0.0",
    "mongodb-memory-server": "^10.2.3",
    "node-fetch": "^3.3.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
